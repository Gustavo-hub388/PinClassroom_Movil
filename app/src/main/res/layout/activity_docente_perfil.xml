                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="10dp"
                                android:text=""
                                android:textAlignment="center" />

                            <EditText
                                android:id="@+id/txtPasswordOld"
                                android:layout_width="match_parent"
