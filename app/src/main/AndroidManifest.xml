<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.pinclassroom">

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="HardcodedDebugMode"
        tools:replace="allowBackup">
        <activity android:name=".AyudaMejorarActivity"
            android:theme="@style/Theme.Design.Light.NoActionBar"></activity>
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.Design.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RecoverPasswordActivity"
            android:theme="@style/Theme.Design.Light.NoActionBar"></activity>
        <activity
            android:name=".ConfigActivity"
            android:theme="@style/Theme.Design.Light.NoActionBar" />
        <activity
            android:name=".EventosActivity"
            android:theme="@style/Theme.Design.Light.NoActionBar" />
        <activity
            android:name=".DocentesActivity"
            android:theme="@style/Theme.Design.Light.NoActionBar"></activity>
        <activity
            android:name=".AulasActivity"
            android:theme="@style/Theme.Design.Light.NoActionBar" />
        <activity
            android:name=".PrincipalActivity"
            android:theme="@style/Theme.Design.Light.NoActionBar">

        </activity>
    </application>

</manifest>